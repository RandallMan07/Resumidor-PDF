{
    "manifest_version": 3,
    "name": "PDF - Summarizer",
    "description": "Summarize university content in a few clicks.",
    "version": "1.0",
    "author": "Martins & Jaso",
    "action": {
      "default_title": "Summarize PDFs"
    },
    "background": {
      "service_worker": "service-worker.js",
      "type": "module"
    },
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }